<?xml version="1.0"?>
<tool id="mkpssm" name="PSSM generator using psi-blast">
  <description></description>
  
  <inputs>
    <param name="source" format="fasta" type="data" label="Source Data" />
    <param name="cnt" size="30" type="text" value="2" label="Times of iterator" />
    <!-- param name="pattern" type="text" value="" label="Pattern" /-->
  </inputs>

  <outputs>
    <data format="txt" name="output" />
  </outputs>

  <command interpreter="sh">mk_pssm.sh '$source' '$cnt' '$output'</command>

  <help>
  </help>
</tool>
